    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "jest": "22.4.3",
    "jest-expo": "^31.0.0",
    "prettier": "^1.16.4",
    "react-test-renderer": "16.5.0",
    "redux-mock-store": "^1.5.3"
  },
  "resolutions": {
    "moment-timezone/moment": "2.22.0"
  },
  "jest": {
    "preset": "jest-expo",
    "testPathIgnorePatterns": [
      "/node_modules/",
      ".eslintrc.js"
