    "i18n-js": "^3.2.1",
    "lodash": "^4.17.11",
    "moment": "^2.24.0",
    "prop-types": "^15.7.2",
    "react": "16.5.0",
    "react-native": "https://github.com/expo/react-native/archive/sdk-31.0.1.tar.gz",
    "react-native-elements": "^0.19.1",
    "react-native-keyboard-spacer": "^0.4.1",
    "react-native-ui-stepper": "^1.2.4",
